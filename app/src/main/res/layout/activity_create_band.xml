<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geminno.app.myplaymusic.me_activity.CreateBandActivity">

    <TextView
        android:id="@+id/tv_createband_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="创建乐队"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#555555"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"/>

    <ImageButton
        android:id="@+id/ib_createBand_return"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow"
        android:layout_marginTop="15dp"
        android:background="@null"/>

    <TextView
        android:id="@+id/tv_createband_2"
        android:layout_below="@id/tv_createband_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="提示：你还没有乐队，请创建"
        android:textSize="20sp"
        android:textColor="#000000"/>

    <Button
        android:layout_below="@id/tv_createband_2"
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_height="40dp"
        android:text="创建"
        android:background="#ffffff"/>
</RelativeLayout>
