<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_headpic"
        android:src="@drawable/headpic"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_item_person_1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_headpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中岛美雪"
        android:textSize="20dp"/>
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_item_person_2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_headpic"
        android:layout_below="@id/tv_item_person_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="乐器:钢琴"
        android:textSize="15dp"/>
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_item_person_3"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_headpic"
        android:layout_below="@id/tv_item_person_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="等级:大神"
        android:textSize="15dp"/>
    <ImageButton
        android:id="@+id/ib_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_msg_right"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"/>
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_item_person_4"
        android:layout_alignParentRight="true"
        android:layout_below="@id/ib_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:text="16:20"/>
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_item_person_5"
        android:layout_toLeftOf="@id/tv_item_person_4"
        android:layout_marginRight="5dp"
        android:layout_below="@id/ib_item_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KM"/>
    <TextView
        android:textColor="#464648"
        android:layout_toLeftOf="@id/tv_item_person_5"
        android:layout_below="@id/ib_item_add"
        android:id="@+id/tv_item_person_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.56"/>
</RelativeLayout>