<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">
<ImageView
    android:id="@+id/iv_dynamic_detail_listitem"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/headpic"
    android:layout_centerVertical="true"
    android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/tv_dynamic_detail_listitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chao"
        android:textStyle="bold"
        android:layout_toRightOf="@id/iv_dynamic_detail_listitem"
        android:layout_alignTop="@id/iv_dynamic_detail_listitem"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_below="@id/tv_dynamic_detail_listitem"
        android:id="@+id/tv_dynamic_detail_listitem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="卧槽"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@id/tv_dynamic_detail_listitem"/>

</RelativeLayout>
