<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_factionheadpic"
        android:src="@drawable/head_me_info"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_item_faction_1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_factionheadpic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="LET'S MAKE"
        android:textSize="20dp"/>
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_item_faction_2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_factionheadpic"
        android:layout_below="@id/tv_item_faction_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/man"
        android:text="123"
        android:textSize="15dp"/>
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_item_faction_3"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_factionheadpic"
        android:layout_below="@id/tv_item_faction_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="此处是群介绍"
        android:textSize="12sp"/>
    <TextView
        android:textColor="#464648"
        android:layout_toRightOf="@id/tv_item_faction_1"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:id="@+id/tv_item_faction_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市海淀区"/>
</RelativeLayout>