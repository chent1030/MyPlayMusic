<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_message"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="消息"
        android:gravity="center"
        android:textSize="20sp"
        android:background="@drawable/bg"
        android:textColor="#FFFFFF"/>
    <ImageButton
        android:id="@+id/ib_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/title_msg_right"
        android:background="@null"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp" />
    <RadioGroup
        android:id="@+id/rg_message"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/tv_message"
        android:orientation="horizontal"
        android:background="#202020">
        <RadioButton
            android:id="@+id/rb1_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E2E2E"
            android:gravity="center"
            android:button="@null"
            android:textColor="@drawable/rb_friendcircle"
            android:textSize="20sp"
            android:layout_marginRight="1dp"
            android:text="聊天"/>
        <RadioButton
            android:id="@+id/rb2_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#2E2E2E"
            android:gravity="center"
            android:button="@null"
            android:textColor="@drawable/rb_friendcircle"
            android:textSize="20sp"
            android:layout_marginLeft="1dp"
            android:text="通讯录"/>
    </RadioGroup>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/context_back_ground"
        android:layout_below="@id/rg_message">
        <EditText
            android:id="@+id/et_search_msg"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/black"
            android:hint="搜索"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"/>
        <ImageButton
            android:id="@+id/ib_msg_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/context_msg_search"
            android:background="@null"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/tv_friend_add"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/et_search_msg"
            android:background="#202020"
            android:textColor="#464648"/>
        <FrameLayout
            android:id="@+id/fl_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_friend_add">

        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>