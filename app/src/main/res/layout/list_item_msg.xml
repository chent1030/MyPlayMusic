<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_mugshot"
        android:src="@drawable/headpic"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_list_item_msg_1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_mugshot"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="李小璐"
        android:textSize="20dp"/>
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_list_item_msg_2"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_mugshot"
        android:layout_alignBottom="@id/iv_mugshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我还在糖果等你"
        android:textSize="15dp"/>
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_list_item_msg_3"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iv_mugshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16:20"/>
    <TextView
        android:textColor="#464648"
        android:id="@+id/tv_list_item_msg_4"
        android:layout_toLeftOf="@id/tv_list_item_msg_3"
        android:layout_marginRight="5dp"
        android:layout_below="@id/iv_mugshot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KM"/>
    <TextView
        android:textColor="#464648"
        android:layout_toLeftOf="@id/tv_list_item_msg_4"
        android:layout_below="@id/iv_mugshot"
        android:id="@+id/tv_list_item_msg_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.56"/>
</RelativeLayout>