<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geminno.app.myplaymusic.me_activity.SettingPasswordActivity">

    <TextView
        android:id="@+id/tv_settingpassword_1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="设置玩乐密码"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#555555"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"/>

    <ImageButton
        android:id="@+id/ib_settingpassword_1"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:src="@drawable/arrow"
        android:layout_marginTop="15dp"
        android:background="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="完成"
        android:background="@null"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/tv_settingpassword_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textSize="30dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码必须同时包含数字和字母,长度6" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至12位,长度6" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextmattern">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="玩乐号"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SJKDHFKJSDHFJK"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextmattern">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"/>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_setpassword_1"
                android:layout_marginLeft="130dp"
                android:background="@drawable/edittextmattern1"
                android:layout_centerVertical="true"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:hint="请设置玩乐密码"/>

            <ImageButton
                android:id="@+id/ib_setpassword_1"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xx1"
                android:background="@null"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edittextmattern">
            <TextView
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确认密码"/>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_setpassword_2"
                android:layout_marginLeft="130dp"
                android:background="@drawable/edittextmattern1"
                android:layout_centerVertical="true"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:hint="请再次填入"/>

            <ImageButton
                android:id="@+id/ib_setpassword_2"
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xx1"
                android:background="@null"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
