<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.geminno.app.myplaymusic.me_activity.ProductConnectionActivity">

    <TextView
        android:id="@+id/tv_product_conn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="作品链接"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#555555"/>
    <TextView
        android:id="@+id/ib_product_conn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="返回"
        android:drawableLeft="@drawable/arrow"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="保存"
        android:background="@null"
        android:textColor="#ffffff"
        android:layout_alignParentRight="true"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>

    <EditText
    android:id="@+id/et_product_conn"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_below="@id/tv_product_conn"
    android:layout_marginTop="20dp"
    android:background="#ffffff"/>

    <ImageButton
        android:id="@+id/ib_production_delete"
        android:layout_alignParentRight="true"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xx"
        android:background="@null"/>
</RelativeLayout>
